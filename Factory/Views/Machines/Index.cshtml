@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Machine>;
<div class="machine">
  <h1>Machines</h1>
  @if (@Model.Count == 0)
  {
    <h3>No Machines have been added yet!</h3>
  }
  else
  {
    @foreach(Machine Machine in Model)
    {
      <li>@Html.ActionLink($"{Machine.Name}", "Details", new { id = Machine.MachineId }) | 
        @foreach(EngineerMachine join in Machine.JoinEntities)
        {
          @Html.ActionLink($"{join.Engineer.Name} + ", "Details", "Engineers", new {id = join.Engineer.EngineerId} )
        }
      </li>
    }
  }
  <br>
  <div id="nav-links">
    <p>@Html.ActionLink("Add new Machine", "Create")</p>
  </div>
</div>